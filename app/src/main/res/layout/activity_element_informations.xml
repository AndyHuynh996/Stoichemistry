<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/welcomebackground"
    tools:context="com.example.tienh.stoichemistry.ElementInformations">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="249dp"
        android:id="@+id/imageViewInfo"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your element?"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_above="@+id/elementinfoEdit"
        android:layout_alignStart="@+id/elementsinfoButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/elementinfoEdit"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences"
        android:background="#ffffff"
        android:layout_below="@+id/imageViewInfo"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignEnd="@+id/elementsinfoButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Element Information"
        android:id="@+id/elementsinfoButton"
        android:layout_below="@+id/elementinfoEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />


</RelativeLayout>
